{
  "name": "mddm",
  "private": true,
  "version": "0.0.0",
  "description": "Electron + React + AntD + PostgreSQL template",
  "author": "Template",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "npm run build:electron && concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "tsc -b && vite build",
    "build:electron": "node scripts/build-electron.mjs",
    "import:data": "node scripts/import-data.mjs",
    "dist:win": "npm run build && electron-builder --win",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "antd": "^6.3.1",
    "dotenv": "^17.3.1",
    "pg": "^8.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.template.electron.react.pg",
    "productName": "ElectronReactPgTemplate",
    "directories": {
      "output": "release"
    },
    "files": [
      "renderer-dist/**",
      "main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.cjs"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
